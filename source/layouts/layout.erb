<!doctype html>
<html>
  <head>
    <meta charset="utf-8">

    <!-- Always force latest IE rendering engine or request Chrome Frame -->
    <meta content="IE=edge,chrome=1" http-equiv="X-UA-Compatible">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Use title if it's in the page YAML frontmatter -->
    <title><%= current_page.data.title || "The Middleman" %></title>

    <%= stylesheet_link_tag "normalize", "https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css", "bootstrap-touch-carousel.css", "all" %>

  </head>

  <body class="<%= page_classes %>">
    <%= yield %>

    <%= javascript_include_tag  "https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js", "https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js", "bootstrap-touch-carousel.js", "all" %>
  </body>
</html>
